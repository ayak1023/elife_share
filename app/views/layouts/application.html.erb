<!DOCTYPE html>
<html>
  <head>
    <title>e-LifeShare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/8cc2529ef7.js" crossorigin="anonymous"></script>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="mb-3">
     <navi class="navbar navbar-expand-lg navi_area">
        <div class="container">
          <span>
            <%= link_to "e-Life Share", root_path ,class:"navbar-brand" %>
          </span>
          <div class="collapse navbar-collapse">
            <% if user_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to root_path ,class:"nav-link" do %><!--要修正-->
                    <span>Home</span>
                  <% end %>
                </li>
                <li>
                    <%= link_to root_path ,class:"nav-link" do %><!--要修正-->
                    <span>Users</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to root_path ,class:"nav-link" do%><!--要修正-->
                    <span>Favorite</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path,class:"nav-link", method: :delete do %>
                    <span>Log out</span>
                  <% end %>
                </li>
              </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
                  <%= link_to root_path ,class:"nav-link text-light" do %>
                    <span>Home</span>
                  <% end %>
                <li>
                  <%= link_to about_path ,class:"nav-link text-light" do %>
                    <span>About</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path ,class:"nav-link text-light" do %>
                    <span>Sign up</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path ,class:"nav-link text-light" do %>
                    <span>Log in</span>
                  <% end %>
                </li>
              </ul>
            <% end %>
          </div>
        </div>
      </navi>
    </header>
    <div class="main">
      <%= yield %>
    </div>
  </body>
</html>
